    initializeElements();
    
    // Load configuration from server
    await loadClientConfig();
    
    if (addressInput) {
        addressInput.focus();
        
        // Add event listeners only after elements are initialized
        addressInput.addEventListener('input', handleInput);
    }
    
    initializeLoadMonitoring();
