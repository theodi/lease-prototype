<div class="card mt-4">
  <div class="card-body">
    <h1 class="card-title mb-4">Your Profile</h1>

    <p class="text-muted">Signed in as: <strong><%= email %></strong></p>

    <form method="POST" action="/profile">
      <div class="form-check form-switch mb-3">
        <input class="form-check-input"
               type="checkbox"
               role="switch"
               id="receiveLeaseUpdateEmails"
               name="receiveLeaseUpdateEmails"
               <%= receiveLeaseUpdateEmails ? 'checked' : '' %>>
        <label class="form-check-label" for="receiveLeaseUpdateEmails">
          Email me when my bookmarked leases are updated
        </label>
      </div>
      <button class="btn btn-primary" type="submit">Save Preferences</button>
    </form>

    <hr class="mt-4">
    <h5>Download your data</h5>
    <form method="POST" action="/profile/request-sar">
    <p class="text-muted mb-1">Request a copy of your personal data (once per day).</p>
    <button class="btn btn-outline-primary" type="submit">Request My Data</button>
    </form>
    <% if (typeof sarMessage !== 'undefined') { %>
    <div class="alert alert-info mt-3"><%= sarMessage %></div>
    <% } %>

    <hr class="mt-4">
    <div class="d-flex justify-content-between align-items-center">
    <a href="/app" class="btn btn-secondary">Back to Search</a>
    <form action="/logout" method="POST" class="mb-0">
        <button class="btn btn-outline-danger" type="submit">Log out</button>
    </form>
    </div>
  </div>
</div>